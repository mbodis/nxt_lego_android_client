<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- Selected true (same as Pressed true) -->
    <item android:state_focused="true" android:state_pressed="false" android:drawable="@drawable/black_stroke_down_drawable"></item>

    <!-- Selected false (same as Pressed false) -->
    <item android:state_focused="false" android:state_pressed="false" android:drawable="@drawable/black_stroke_drawable"></item>

    <!-- Pressed true (same as Selected true) -->
    <item android:state_pressed="true" android:drawable="@drawable/black_stroke_down_drawable"></item>

    <!-- Pressed false (same as Selected false) -->
    <item android:state_pressed="false" android:drawable="@drawable/black_stroke_drawable"></item>
    
</selector>
